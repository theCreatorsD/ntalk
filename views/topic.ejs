<!-- views/index.ejs -->
<!doctype html>
<html>
  <head>
    <title>Node Authentication</title>
    <link rel="stylesheet" href="/css/bootstrap.min.css"> <!-- load bootstrap css -->
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->

  </head>
<body>
  <!-- nav start -->
  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="/">나투나 톡!</a>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">
          <% if(user && user.local.isTeacher) { %>
              <li><a href="/addtopic">Add Topic</a></li>
            <% } %>
          </ul>
          <!-- <form class="navbar-form navbar-left">
          <div class="form-group">
          <input type="text" class="form-control" placeholder="Search">
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
      </form> -->
      <ul class="nav navbar-nav navbar-right">
        <% if(user && user._id != null) { %>
          <p><li>환영합니다.</li></p>
          <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= user.local.nickname %>님<span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><a href="/logout">로그아웃</a></li>
          </ul>
          </li>
        <% } else {%>
          <li><a href="/login">log in</a></li>
        <% } %>
      </ul>
        </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
    </nav>

<!-- nav end -->
    <div class="container">
      <div class="jumbotron text-center">
        <h1><%= topic.title %></h1>
        <p><%= topic.description %></p>
        <%= console.log(issues.length) %>
      </div>
    </div>
    <% if(user != null && user.local.isTeacher) {%>

    <div class="container">
      <form action="/topic/<%= topic.id %>" method="post">
        <div class="form-group">
          <label>Add Issue</label>
          <div class="container-fluid">
            <div class="col-md-10">
              <input type="text" class="form-control" name="title">
            </div>
            <div class="col-md-2">
              <button type="submit" class="btn btn-warning btn-lg">submit</button>
            </div>
          </div>
        </div>

      </form>
    </div>
    <% } %>
    <div class="container">
      <% if (issues.length == 0) { %>
      <% } %>

      <% if (issues.length == 1) { %>
        <div class="col-md-12">
          <a href="/topic/<%=topic._id%>/<%=issues[0]._id%>">
            <div class="jumbotron text-center">
              <h3><%=issues[0].title%></h3>
            </div>
          </a>
        </div>
      <% } %>

      <% if (issues.length == 2) { %>
        <% for (i = 0 ; i < 2 ; i++) { %>
          <div class="col-md-6">
            <a href="/topic/<%=topic._id%>/<%=issues[i]._id%>">
              <div class="jumbotron text-center">
                <h3><%=issues[i].title%></h3>
              </div>
            </a>
          </div>
        <% } %>
      <% } %>

      <% if (issues.length == 3) { %>
        <% for (i = 0 ; i < 3 ; i++) { %>
          <div class="col-md-4">
            <a href="/topic/<%=topic._id%>/<%=issues[i]._id%>">
              <div class="jumbotron text-center">
                <h3><%=issues[i].title%></h3>
              </div>
            </a>
          </div>
        <% } %>
      <% } %>
    </div>


    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="/js/bootstrap.min.js"></script>
</body>
</html>
