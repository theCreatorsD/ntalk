<!-- nav end -->

<div class="container">
  <% for (var i = 0 ; i < topics.length ; i ++) { %>
    <a href="/topic/<%= topics[i].id %>">
      <div class="row">
        <div class="row__parallel-sm row__parallel-md row__parallel-lg">
          <div class="col-sm-7 col-sm-pull-5 col-md-8 col-md-pull-4">
            <div class="jumbotron text-left">
