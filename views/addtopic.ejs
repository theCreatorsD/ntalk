<!-- nav end -->

<div class="container">

  <form action="/addtopic" method="post">
    <div class="form-group">
      <label>Title</label>
      <input type="text" class="form-control" name="title">
    </div>
    <div class="form-group">
      <label>Description</label>
      <input type="text" class="form-control" name="desc">
